<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="h1_style">
        <item name="android:textSize">@dimen/h1_size</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black_light</item>
    </style>

    <style name="subtitle1_style">
        <item name="android:textSize">@dimen/subtitle1_size</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="edit_text_style">
        <item name="android:textSize">@dimen/subtitle1_size</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_medium</item>
        <item name="android:textColorHint">@color/black_medium_transparent</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:padding">@dimen/edit_text_padding</item>
        <item name="android:importantForAutofill">no</item>
        <item name="android:autofillHints">@string/empty_string</item>
        <item name="android:layout_marginTop">@dimen/edit_text_margin</item>
    </style>

    <style name="empty_buttons_style">
        <item name="android:layout_marginTop">@dimen/login_buttons_margin</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/login_buttons_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textSize">@dimen/subtitle1_size</item>
        <item name="android:elevation">20dp</item>
    </style>

    <style name="filled_buttons_style">
        <item name="android:layout_marginTop">@dimen/login_buttons_margin</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/registration_buttons_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginBottom">@dimen/registration_buttons_margin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textSize">@dimen/subtitle1_size</item>
        <item name="android:elevation">20dp</item>
    </style>

    <style name="user_type_picker_style">
        <item name="textAllCaps">false</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/black_medium</item>
        <item name="android:padding">@dimen/edit_text_padding</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/registration_buttons_margin</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textSize">@dimen/subtitle1_size</item>
    </style>

    <style name="error_text_field_style">
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/error_text_size</item>
        <item name="android:text">@string/default_error</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="progress_bar_style" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/gray_black</item>
        <item name="android:visibility">gone</item>
    </style>
</resources>